<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">
    <reference id="calculator" interface="com.connexta.calculator.Calculator"
               filter="(id=contract)"
               availability="mandatory"/>

    <reference id="consumer" interface="com.connexta.consumer.Consumer" filter="(id=by-contract)"
               availability="mandatory"/>

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">

        <command name="bundemo/bycontract">
            <action class="com.connexta.contractcommand.CommandImpl">
                <argument ref="calculator"/>
                <argument ref="consumer"/>
            </action>
        </command>
    </command-bundle>
</blueprint>