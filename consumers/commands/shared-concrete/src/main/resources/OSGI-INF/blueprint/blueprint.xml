<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">
    <reference id="calculator" interface="com.connexta.calculator.Calculator"
               filter="(id=exported-concrete)"
               availability="mandatory"/>

    <reference id="consumer" interface="com.connexta.consumer.Consumer"
               filter="(id=imported-concrete)"
               availability="mandatory"/>

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">

        <command name="bundemo/imported">
            <action class="com.connexta.sharedconcrete.CommandImpl">
                <argument ref="calculator"/>
                <argument ref="consumer"/>
            </action>
        </command>
    </command-bundle>
</blueprint>